    <span>i N D i</span><br><span>G E N i U s</span>
  <% end %>
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Workshops", items_path(true) %>
        </li>
        <li class="nav-item">
          <%= link_to "Products", items_path(false) %>
        </li>
        <li class="nav-item">
           <%= link_to order_path("shopping-cart") do %>
            <i class="fas fa-shopping-cart"></i>
           <% end %>
        </li>
        <%# <li class="nav-item"> %>
          <%# <i class="fas fa-globe"></i>"></i> %>
        <%# </li> %>
        <li class="nav-item dropdown">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <img src="https://res.cloudinary.com/cassiaveliz/image/upload/v1599165302/user_none.png" 
                  class="avatar-bordered" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            
            <%# <%= link_to "Sell your products", orders_path, class: "nav-link" %>
            <%= link_to "My Listings", listings_path, class: "dropdown-item" %>
            <%= link_to "My Orders", orders_path, class: "dropdown-item" %>
            <%= link_to "View profile", users_show_path, class: "dropdown-item" %>
            <%= link_to "Edit Account", edit_user_registration_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
