<div class="indigenius-container">

  <div class="listing">

    <h3>Here are your Items</h3>

    <div class="listing-items">
  
      <div class="listing-workshops">
        <div class="listing-header">
          <h4>Worskshops</h4>
          <p><%= link_to 'Add New Workshop', new_item_path(true), class: "indi-navegation" %></p>
        </div>
        <%= render 'listing_display', items: @workshops %>
      </div>

      <div class="listing-products">
        <div class="listing-header">
          <h4>Products</h4>
          <p><%= link_to 'Add New Product', new_item_path(false), class: "indi-navegation" %></p>
        </div>
        <%= render 'listing_display', items: @products %>
      </div>

    </div>

   </div>

</div>
