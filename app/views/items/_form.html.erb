  <%= simple_form_for(@item) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :category %>
      <%if @item.workshop%>
        <%= f.input :capacity %>
      <%else%>
        <%= f.input :quantity %>
      <%end%>
      <%= f.input :workshop, label: "Workshop"%>







    </div>
  
    <div class="form-actions">
      <%if @item.workshop%>
      <%= f.button :submit, "Edit Dates", class: "button-square-green" %>
      <%else%>
      <%= f.button :submit, "Update Product", class: "button-square-green" %>
      <%end%>
    </div>
  <% end %>
