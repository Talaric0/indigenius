
<div class="container">

  <div class="indigenius-container">
    <h1><%= @item.name %></h1>
      
    <div class="image-carousel">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
      
          <% @item.images.each_with_index do |image, index| %> 
            <% if index == 0 %>
              <div class="carousel-item active">
                <img class="d-block w-100" src="<%= cl_image_path(image.key) %>" alt="slide <%= index + 1 %>">
              </div>
            <% end %>
            <div class="carousel-item">
                <img class="d-block w-100" src="<%= cl_image_path(image.key) %>" alt="slide <%= index + 1 %>">
              </div>
          <% end %>
      
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <p>Description: <%= @item.description %></p>
    <p>Price: <%= humanized_money_with_symbol(@item.price) %></p>
    <% if @item.workshop%>
      <p>Capacity: <%= @item.capacity %></p>
    <% else %>
      <p>Quantity: <%= @item.quantity %></p>
    <% end %>
    <p>Category: <%= @item.category %></p>

    <% @item.workshop_dates.each do |workshop_date|%>
      <p><%="#{workshop_date.start_date} to #{workshop_date.end_date}"%></p>
    <%end%>

    <% if @item.workshop?%>
      <%= render 'order_items/workshop_form', workshop: @order_item %>
    <% else %>
      <%= render 'order_items/product_form', product: @order_item %>
    <% end %>
    <br>
    
    <div style="border-top: 1px solid black;">
    <% if @reviews.empty? %>
        <p>No reviews available for this item</p>
    <% else %>
        <% @reviews.each do |review| %>
            <% review.rating.times do %>
              ‚≠ê
            <% end %>
            <p><%= review.content %></p>
        <% end %>
    <% end %>
    <% if current_user.id == @item.user.id %>
      <%=link_to "Back to My Listings", listings_path, class: "link"%> 
    <%else%>
      <%=link_to "Back to Items", :back %>  
    <%end%>
  
    </div>
  </div>
  
  

</div>
