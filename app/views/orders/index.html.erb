<div class="container">

  <h1>Here are your Indigenius Orders</h1>

  <% @orders.each do |order|%>
     <p>ID: <%= "#{order.id}" %></p>
     <p>Status: <%= "#{order.status}" %></p>

    <h2>Pending Orders</h2>
    <table>
      <thead>
        <tr>
          <th><p>Name</p></th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>Order ID: <%= order.id %></td>
            <td>Final Price: <%= price_mask_real(order.total_price) %></td>
            <td>Status: <%= order.status %></td>
            <td><%= link_to 'Confirm', confirm_order_path(order), method: :patch  %></td>
            <td><%= link_to 'Cancell', cancell_order_path(order), method: :put, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %> 
      </tbody>
    </table>

  <h2>Confirmed Orders</h2>

  <h2>Cancelled Orders</h2>

  <%end%>  
</div>

<%= link_to "back", items_path %>
